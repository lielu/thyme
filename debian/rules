#!/usr/bin/make -f

export DH_VERBOSE = 1
export PYBUILD_NAME = thyme

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build/
	rm -rf *.egg-info/
	find . -name "*.pyc" -delete
	find . -name "__pycache__" -delete

override_dh_auto_build:
	dh_auto_build

override_dh_auto_install:
	dh_auto_install
	# Install additional data files
	mkdir -p debian/thyme/usr/share/thyme
	cp -r src/weather_icons debian/thyme/usr/share/thyme/
	mkdir -p debian/thyme/usr/share/thyme/sounds
	cp -r src/sounds/* debian/thyme/usr/share/thyme/sounds/ 2>/dev/null || true
	mkdir -p debian/thyme/usr/share/thyme/backgrounds
	cp -r src/backgrounds/* debian/thyme/usr/share/thyme/backgrounds/ 2>/dev/null || true
	# Install configuration template
	mkdir -p debian/thyme/etc/thyme
	cp src/alarm_config.txt.example debian/thyme/etc/thyme/alarm_config.txt
	# Install desktop file
	mkdir -p debian/thyme/usr/share/applications
	install -m 644 debian/thyme.desktop debian/thyme/usr/share/applications/
	# Install systemd service
	mkdir -p debian/thyme/lib/systemd/system
	install -m 644 debian/thyme.service debian/thyme/lib/systemd/system/

override_dh_installdocs:
	dh_installdocs
	# Install additional documentation
	mkdir -p debian/thyme/usr/share/doc/thyme
	cp architecture_diagram.md debian/thyme/usr/share/doc/thyme/
	cp discord_setup_guide.md debian/thyme/usr/share/doc/thyme/
	cp CONTRIBUTING.md debian/thyme/usr/share/doc/thyme/
	cp REFACTORING_SUMMARY.md debian/thyme/usr/share/doc/thyme/

override_dh_systemd_enable:
	dh_systemd_enable --no-enable

override_dh_systemd_start:
	dh_systemd_start --no-start 