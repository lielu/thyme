{
  "name": "thyme-kiosk-clock",
  "version": "2.0.0",
  "description": "A full-screen kiosk clock with calendar, weather, and alarms - Electron Edition",
  "main": "main/index.js",
  "author": "Lie Lu",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.lielu.thyme",
    "productName": "Thyme Kiosk Clock",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "preload.js",
      "assets/**/*",
      "config/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility",
      "icon": "assets/icons/icon.png",
      "desktop": {
        "Name": "Thyme Kiosk Clock",
        "Comment": "Digital clock with calendar and weather",
        "Categories": "Utility;Clock;"
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns"
    }
  },
  "dependencies": {
    "axios": "^1.6.2",
    "discord.js": "^14.14.1",
    "googleapis": "^128.0.0",
    "node-cron": "^3.0.3",
    "say": "^0.16.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

